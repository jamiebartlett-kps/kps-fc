<main class="container">
    <img id="recipe-image" alt="Recipe" class="recipe-image" width="100%" height="400" />
    
    <div id="recipe-description" class="recipe-description"></div>

    <!-- Dummy Product Carousel -->
    <div class="product-carousel" id="recipe-products" style="display: none;">
        <h2 class="carousel-title">Shop Ingredients</h2>
        <div class="carousel-track">
            <a class="carousel-item" href="/products/product-1">
                <img class="carousel-product-image" src="{{ 'placeholder-image.png' | asset_url }}" alt="Product 1" width="100" height="100" />
                <div class="carousel-product-name">Product 1</div>
                <div class="carousel-product-price">$12.99</div>
            </a>
            <a class="carousel-item" href="/products/product-2">
                <img class="carousel-product-image" src="{{ 'placeholder-image.png' | asset_url }}" alt="Product 2" width="100" height="100" />
                <div class="carousel-product-name">Product 2</div>
                <div class="carousel-product-price">$9.49</div>
            </a>
            <a class="carousel-item" href="/products/product-3">
                <img class="carousel-product-image" src="{{ 'placeholder-image.png' | asset_url }}" alt="Product 3" width="100" height="100" />
                <div class="carousel-product-name">Product 3</div>
                <div class="carousel-product-price">$7.25</div>
            </a>
        </div>
    </div>

    <div class="recipe-content">
        <aside class="ingredients-section">
            <h2 class="section-title">Ingredients</h2>
            <div id="ingredients-list"></div>
        </aside>

        <section class="instructions-section">
            <h2 class="section-title">Method</h2>
            <div id="instructions-list"></div>
        </section>
    </div>
</main>