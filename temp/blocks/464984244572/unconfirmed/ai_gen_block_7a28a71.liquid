{% doc %}
  @prompt
    A quotes section, like multicolumn but with 2 big quotes. and names under each one
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-quotes-section-{{ ai_gen_id }} {
    padding: 60px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-quotes-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-quotes-heading-{{ ai_gen_id }} {
    text-align: center;
    margin: 0 0 50px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-quotes-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
  }

  .ai-quote-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding: 40px;
    background-color: {{ block.settings.quote_background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-quote-icon-{{ ai_gen_id }} {
    width: {{ block.settings.quote_icon_size }}px;
    height: {{ block.settings.quote_icon_size }}px;
    color: {{ block.settings.quote_icon_color }};
    flex-shrink: 0;
  }

  .ai-quote-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.quote_text_size }}px;
    line-height: 1.6;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-quote-author-{{ ai_gen_id }} {
    font-size: {{ block.settings.author_text_size }}px;
    color: {{ block.settings.author_text_color }};
    font-weight: 600;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-quotes-section-{{ ai_gen_id }} {
      padding: 40px 20px;
    }

    .ai-quotes-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-quote-item-{{ ai_gen_id }} {
      padding: 30px 20px;
    }

    .ai-quotes-heading-{{ ai_gen_id }} {
      margin-bottom: 30px;
    }
  }
{% endstyle %}

<div class="ai-quotes-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-quotes-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-quotes-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-quotes-grid-{{ ai_gen_id }}">
      <div class="ai-quote-item-{{ ai_gen_id }}">
        <svg class="ai-quote-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"/>
        </svg>
        {% if block.settings.quote_1 != blank %}
          <div class="ai-quote-text-{{ ai_gen_id }}">{{ block.settings.quote_1 }}</div>
        {% else %}
          <div class="ai-quote-text-{{ ai_gen_id }}">Share a customer testimonial or highlight a positive review to build trust and credibility.</div>
        {% endif %}
        {% if block.settings.author_1 != blank %}
          <p class="ai-quote-author-{{ ai_gen_id }}">{{ block.settings.author_1 }}</p>
        {% else %}
          <p class="ai-quote-author-{{ ai_gen_id }}">Customer name</p>
        {% endif %}
      </div>

      <div class="ai-quote-item-{{ ai_gen_id }}">
        <svg class="ai-quote-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"/>
        </svg>
        {% if block.settings.quote_2 != blank %}
          <div class="ai-quote-text-{{ ai_gen_id }}">{{ block.settings.quote_2 }}</div>
        {% else %}
          <div class="ai-quote-text-{{ ai_gen_id }}">Share a customer testimonial or highlight a positive review to build trust and credibility.</div>
        {% endif %}
        {% if block.settings.author_2 != blank %}
          <p class="ai-quote-author-{{ ai_gen_id }}">{{ block.settings.author_2 }}</p>
        {% else %}
          <p class="ai-quote-author-{{ ai_gen_id }}">Customer name</p>
        {% endif %}
      </div>
    </div>
  </div>
</div>

