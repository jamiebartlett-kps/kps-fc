{% doc %}
  @prompt
    This should be a big image banner with the product name and description on it in the primary font.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.banner_height_desktop }}px;
    overflow: hidden;
  }

  .ai-product-banner__image-wrapper-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .ai-product-banner__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ block.settings.image_position }};
  }

  .ai-product-banner__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-banner__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-product-banner__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    display: block;
  }

  .ai-product-banner__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_position_vertical }};
    align-items: {{ block.settings.content_position_horizontal }};
    min-height: {{ block.settings.banner_height_desktop }}px;
    padding: 60px 40px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-product-banner__content-inner-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
  }

  .ai-product-banner__title-{{ ai_gen_id }} {
    {% comment %} font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }}; {% endcomment %}
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    color: {{ block.settings.text_color }};
    margin: 0 0 20px;
  }

  .ai-product-banner__description-{{ ai_gen_id }} {
    {% comment %} font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }}; {% endcomment %}
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-product-banner-{{ ai_gen_id }} {
      min-height: {{ block.settings.banner_height_mobile }}px;
    }

    .ai-product-banner__content-{{ ai_gen_id }} {
      min-height: {{ block.settings.banner_height_mobile }}px;
      padding: 40px 20px;
    }

    .ai-product-banner__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
      
    }

    .ai-product-banner__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<div class="ai-product-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-banner__image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.banner_image %}
      <img
        src="{{ block.settings.banner_image | image_url: width: 2000 }}"
        srcset="{{ block.settings.banner_image | image_url: width: 600 }} 600w,
                {{ block.settings.banner_image | image_url: width: 1000 }} 1000w,
                {{ block.settings.banner_image | image_url: width: 1400 }} 1400w,
                {{ block.settings.banner_image | image_url: width: 2000 }} 2000w"
        sizes="100vw"
        alt="{{ block.settings.banner_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.banner_image.width }}"
        height="{{ block.settings.banner_image.height }}"
        class="ai-product-banner__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-product-banner__placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-product-banner__overlay-{{ ai_gen_id }}"></div>

  <div class="ai-product-banner__content-{{ ai_gen_id }}">
    <div class="ai-product-banner__content-inner-{{ ai_gen_id }}">
      {% if block.settings.show_product_title and product.title != blank %}
        <h1 class="ai-product-banner__title-{{ ai_gen_id }}">{{ product.title }}</h1>
      {% endif %}

      {% if block.settings.show_product_description and product.description != blank %}
        <div class="ai-product-banner__description-{{ ai_gen_id }}">
          {{ product.description | strip_html | truncate: block.settings.description_length }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product banner",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "banner_height_desktop",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Desktop height",
      "default": 600
    },
    {
      "type": "range",
      "id": "banner_height_mobile",
      "min": 200,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "Mobile height",
      "default": 400
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "checkbox",
      "id": "show_product_title",
      "label": "Show product title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_product_description",
      "label": "Show product description",
      "default": true
    },
    {
      "type": "range",
      "id": "description_length",
      "min": 50,
      "max": 500,
      "step": 50,
      "label": "Description length",
      "default": 200
    },
    {
      "type": "select",
      "id": "content_position_vertical",
      "label": "Vertical position",
      "options": [
        {
          "value": "flex-start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "content_position_horizontal",
      "label": "Horizontal position",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_max_width",
      "min": 400,
      "max": 1200,
      "step": 100,
      "unit": "px",
      "label": "Content max width",
      "default": 800
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "font_picker",
      "id": "heading_font",
      "label": "Font",
      "default": "assistant_n4"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 24,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Title size",
      "default": 60
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Description size",
      "default": 18
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Product banner"
    }
  ]
}
