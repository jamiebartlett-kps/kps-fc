{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

{%- if section.settings.image_height == 'adapt' and section.settings.image != blank -%}
  {%- style -%}
    @media screen and (max-width: 749px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before,
      #Banner-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endstyle -%}
{%- endif -%}

{%- style -%}
  #Banner-{{ section.id }}::after {
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }

  .hxxl {
    font-size: calc(var(--font-heading-scale) * 4rem);
  }

  @media only screen and (min-width: 750px) {
    .hxxl {
      font-size: clamp(calc(var(--font-heading-scale) * 5.6rem), 14vw, calc(var(--font-heading-scale) * 7.2rem));
      line-height: 1.1;
    }
  }

  h1,
  .h1 {
    font-size: calc(var(--font-heading-scale) * 2.5rem);
  }

  @media only screen and (min-width: 750px) {
    h1,
    .h1 {
      font-size: calc(var(--font-heading-scale) * 4rem);
    }
  }

  .banner__content--top-left {
    align-items: flex-start;
    justify-content: flex-start;
  }

  .banner__box.content-container.content-container--full-width-mobile, .banner__box {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 0;
    margin: 0;
    max-width: none;
  }

  .banner--content-align-left .hero-banner__box {
    text-align: center;
  }

  @media only screen and (min-width: 960px) {
    .banner--content-align-right .hero-banner__box {
      text-align: right;
    }

    .banner--content-align-left .hero-banner__box {
      text-align: left;
    }

    .banner--content-align-left.banner--desktop-transparent .hero-banner__box,
    .banner--content-align-right.banner--desktop-transparent .hero-banner__box,
    .banner--medium.banner--desktop-transparent .hero-banner__box {
      max-width: 68rem;
    }
  }

  @media screen and (max-width: 959px) {
    .hero-banner__heading-container, .hero-banner__text-container {
      width: 100%;
      padding: 4rem 4rem 0 4rem;
      margin: 0;
    }
  }

  @media screen and (min-width: 960px) {
    .banner__box.content-container.content-container--full-width-mobile {
      max-width: 71rem;
    }
    .banner__box {
      gap: 4rem;
    }
  }

  .banner--mobile-bottom .banner__box {
    padding: 0;
  }

  .banner__heading {
    margin: 0;
  }

  .banner__text {
    margin: 0;
  }

  @media screen and (min-width: 960px) {
    .banner--content-align-right .banner__box {
      text-align: right!important;
    }

    .banner--content-align-left .banner__box {
      text-align: left!important;
    }
  }

  .button {
    font-weight: 800;
  }

  .hero-banner {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 75vh;
  }

  @media screen and (min-width: 750px) and (max-width: 960px) {
    .hero-banner {
      height: 95vh;
    }
  }

  @media screen and (min-width: 960px) {
    .hero-banner {
      min-height: auto!important;
      height: auto;
      aspect-ratio: auto 1920 / 906;
    }
  }

  .hero-banner__content.banner__content { align-items: flex-start;}

  .hero-banner__media {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .hero-banner__image {
    width: 100%;
    height: auto;
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
  }
  @media screen and (min-width: 960px) {
    .hero-banner__image {
      top: 0;
      bottom: auto;
    }
  }

  .hero-banner__heading {
    margin: 0;
  }

  .hero-banner__heading .hxxl{
    margin: 0;
  }

  .hero-banner__text-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }

  @media screen and (max-width: 750px) {
    .banner--content-align-mobile-center .hero-banner__buttons {
      display: flex;
      gap: 1rem;
      justify-content: center
    }
  }


{%- endstyle -%}

{%- liquid
  assign full_width = '100vw'
  assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'

  if section.settings.image_behavior == 'ambient'
    assign half_width = '60vw'
    assign full_width = '120vw'
    assign stacked_sizes = '(min-width: 750px) 60vw, 120vw'
    assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680'
  elsif section.settings.image_behavior == 'fixed' or section.settings.image_behavior == 'zoom-in'
    assign half_width = '100vw'
    assign stacked_sizes = '100vw'
  else
    assign half_width = '50vw'
    assign stacked_sizes = '(min-width: 750px) 50vw, 100vw'
  endif
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
-%}

<div
  id="Banner-{{ section.id }}"
  class="hero-banner banner banner--content-align-{{ section.settings.desktop_content_alignment }} banner--content-align-mobile-{{ section.settings.mobile_content_alignment }} banner--{{ section.settings.image_height }}{% if section.settings.stack_images_on_mobile and section.settings.image != blank and section.settings.image_2 != blank %} banner--stacked{% endif %}{% if section.settings.image_height == 'adapt' and section.settings.image != blank %} banner--adapt{% endif %}{% if section.settings.show_text_below %} banner--mobile-bottom{%- endif -%}{% if section.settings.show_text_box == false %} banner--desktop-transparent{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %} color-{{ section.settings.color_scheme }} "
>



{%- if section.settings.image_desktop_xl != blank -%}
  <div class="hero-banner__media">
    <picture>
      {%- if section.settings.image_mobile != blank -%}
        <!-- Mobile image (up to 960px) -->
        <source
          media="(max-width: 750px)"
          srcset="
            {{ section.settings.image_mobile | image_url: width: 550 }} 550w,
            {{ section.settings.image_mobile | image_url: width: 750 }} 750w
          "
          sizes="100vw"
        >
      {%- endif -%}

      {%- if section.settings.image_mobile_xl != blank -%}
        <!-- Mobile image (up to 960px) -->
        <source
          media="(min-width: 751px) and (max-width: 960px)"
          srcset="
            {{ section.settings.image_mobile_xl | image_url: width: 550 }} 550w,
            {{ section.settings.image_mobile_xl | image_url: width: 750 }} 750w
          "
          sizes="100vw"
        >
      {%- endif -%}

      {%- if section.settings.image_desktop != blank -%}
        <!-- Desktop image (961pxâ€“1919px) -->
        <source
          media="(min-width: 960px) and (max-width: 1919px)"
          srcset="
            {{ section.settings.image_desktop | image_url: width: 960 }} 960w,
            {{ section.settings.image_desktop | image_url: width: 1500 }} 1500w,
            {{ section.settings.image_desktop | image_url: width: 1920 }} 1920w
          "
          sizes="100vw"
        >
      {%- endif -%}

      {%- if section.settings.image_desktop_xl != blank -%}
        <!-- XL Desktop image (1920px and up) -->
        <source
          media="(min-width: 1920px)"
          srcset="
            {{ section.settings.image_desktop_xl | image_url: width: 1920 }} 1920w,
            {{ section.settings.image_desktop_xl | image_url: width: 3000 }} 3000w,
            {{ section.settings.image_desktop_xl | image_url: width: 3840 }} 3840w
          "
          sizes="100vw"
        >
      {%- endif -%}

      <!-- Fallback image -->
      <img
        src="{% if section.settings.image_desktop_xl != blank %}
                {{ section.settings.image_desktop_xl | image_url: width: 1500 }}
              {% elsif section.settings.image_desktop != blank %}
                {{ section.settings.image_desktop | image_url: width: 1500 }}
              {% else %}
                {{ section.settings.image_mobile | image_url: width: 960 }}
              {% endif %}"
        alt="{% if section.settings.image_desktop_xl != blank %}
                {{ section.settings.image_desktop_xl.alt | escape }}
              {% elsif section.settings.image_desktop != blank %}
                {{ section.settings.image_desktop.alt | escape }}
              {% else %}
                {{ section.settings.image_mobile.alt | escape }}
              {% endif %}"
        loading="lazy"
        class="hero-banner__image"
      >
    </picture>

  </div>
{%- else -%}
  <div class="hero-banner__media media placeholder">
    {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
  </div>
{%- endif -%}




  <div class="hero-banner__content banner__content banner__content--{{ section.settings.desktop_content_position }} page-width">
    <div class="hero-banner__box banner__box content-container content-container--full-width-mobile">
      <div class="hero-banner__heading-container">
        {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
              <h1
                class="hero-banner__heading inline-richtext {{ block.settings.heading_size }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.heading }}
              </h1>
            {%- endcase -%}
        {%- endfor -%}
      </div>

      <div class="hero-banner__text-container">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'text' -%}
            <h2 class="banner__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </h2>
          {%- when 'buttons' -%}
            <div
              class="hero-banner__buttons{% if block.settings.button_label_1 != blank and block.settings.button_label_2 != blank %} banner__buttons--multiple{% endif %}"
              {{ block.shopify_attributes }}
            >
              {%- if block.settings.button_label_1 != blank -%}
                <a
                  {% if block.settings.button_link_1 == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link_1 }}"
                  {% endif %}
                  class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}"
                >
                  {{- block.settings.button_label_1 | escape -}}
                </a>
              {%- endif -%}
              {%- if block.settings.button_label_2 != blank -%}
                <a
                  {% if block.settings.button_link_2 == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link_2 }}"
                  {% endif %}
                  class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
                >
                  {{- block.settings.button_label_2 | escape -}}
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

  </div>
</div>

