            }
        ];

        // Get unique seasons for filters
        const seasons = [...new Set(recipesData.map(r => r.season))];

        // Render filters
        function renderFilters() {
            const filtersContainer = document.getElementById('filters');
            const allBtn = document.createElement('button');
            allBtn.className = 'filter-btn active';
            allBtn.textContent = 'All Recipes';
            allBtn.onclick = () => renderGrid(recipesData);
            filtersContainer.appendChild(allBtn);

            seasons.forEach(season => {
                const btn = document.createElement('button');
                btn.className = 'filter-btn';
                btn.textContent = season.charAt(0).toUpperCase() + season.slice(1);
                btn.onclick = () => {
                    document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    const filtered = recipesData.filter(r => r.season === season);
                    renderGrid(filtered);
                };
                filtersContainer.appendChild(btn);
            });
        }

        // Render grid
        function renderGrid(recipes) {
            const grid = document.getElementById('grid');
            grid.innerHTML = '';

            recipes.forEach(recipe => {
                const card = document.createElement('a');
                card.href = `/recipes/${recipe.id}`;
                card.className = 'recipe-card';

                card.innerHTML = `
                    <img src="${recipe.image}" alt="${recipe.title}" class="recipe-image">
                    <div class="recipe-content">
                        <h3 class="recipe-title">${recipe.title}</h3>
                        <p class="recipe-description">${recipe.description}</p>
                        <div>
                            ${recipe.tags.map(tag => `<span class="tag">${tag}</span>`).join('')}
                        </div>
                        <div class="recipe-meta">
                            <div class="meta-item">
                                <span class="meta-icon">‚è±</span>
                                <span>${recipe.prepTime}</span>
                            </div>
                            <div class="meta-item">
                                <span class="meta-icon">üë•</span>
                                <span>${recipe.servings}</span>
                            </div>
                        </div>
                    </div>
                `;

                grid.appendChild(card);
            });
        }

        // Initialize
        renderFilters();
        renderGrid(recipesData);
    </script> {% endcomment %}