<style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', sans-serif;
            background-color: #fafaf8;
            color: #2c2c2c;
            line-height: 1.6;
        }

        header {
            background-color: #fff;
            border-bottom: 1px solid #e8e8e6;
            padding: 2rem 0;
            margin-bottom: 3rem;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        header h1 {
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #1a1a1a;
        }

        .recipe-meta {
            display: flex;
            gap: 2rem;
            margin-top: 1.5rem;
            flex-wrap: wrap;
        }

        .meta-item {
            display: flex;
            flex-direction: column;
        }

        .meta-label {
            font-size: 0.85rem;
            color: #666;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.25rem;
        }

        .meta-value {
            font-size: 1.1rem;
            font-weight: 500;
            color: #2c2c2c;
        }

        .recipe-image {
            width: 100%;
            height: 400px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 3rem;
        }

        .recipe-description {
            font-size: 1.1rem;
            line-height: 1.8;
            color: #444;
            margin-bottom: 3rem;
            padding: 2rem;
            background-color: #fff;
            border-left: 4px solid #5a9d3d;
            border-radius: 4px;
        }

        .recipe-content {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 3rem;
            margin-bottom: 3rem;
        }

        .ingredients-section {
            background-color: #fff;
            padding: 2rem;
            border-radius: 8px;
            height: fit-content;
        }

        .section-title {
            font-size: 1.4rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: #1a1a1a;
            border-bottom: 2px solid #5a9d3d;
            padding-bottom: 0.75rem;
        }

        .ingredient-item {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            padding: 0.75rem 0;
            border-bottom: 1px solid #f0f0ee;
        }

        .ingredient-item:last-child {
            border-bottom: none;
        }

        .ingredient-name {
            font-weight: 500;
            color: #2c2c2c;
            flex: 1;
        }

        .ingredient-quantity {
            color: #666;
            font-size: 0.95rem;
            margin-left: 1rem;
            white-space: nowrap;
        }

        .ingredient-prep {
            font-size: 0.85rem;
            color: #999;
            font-style: italic;
            width: 100%;
            margin-top: 0.25rem;
        }

        .instructions-section {
            background-color: #fff;
            padding: 2rem;
            border-radius: 8px;
        }

        .step {
            margin-bottom: 2rem;
            padding-bottom: 2rem;
            border-bottom: 1px solid #f0f0ee;
        }

        .step:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .step-number {
            display: inline-block;
            width: 32px;
            height: 32px;
            background-color: #5a9d3d;
            color: white;
            border-radius: 50%;
            text-align: center;
            line-height: 32px;
            font-weight: 600;
            margin-right: 1rem;
            margin-bottom: 0.5rem;
        }

        .step-text {
            color: #444;
            line-height: 1.8;
        }

        @media (max-width: 768px) {
            .recipe-content {
                grid-template-columns: 1fr;
            }

            header h1 {
                font-size: 1.8rem;
            }

            .recipe-meta {
                gap: 1rem;
            }

            .recipe-image {
                height: 300px;
            }
        }
    </style>

<div id="recipe-wrapper" style="display: none;">
    <header>
        <div class="container">
            <h1 id="recipe-title">Homity Pie</h1>
            <div class="recipe-meta">
                <div class="meta-item">
                    <span class="meta-label">Serves</span>
                    <span class="meta-value" id="recipe-serves">6</span>
                </div>
                <div class="meta-item">
                    <span class="meta-label">Cooking Time</span>
                    <span class="meta-value" id="recipe-time">1 hour 15 minutes</span>
                </div>
            </div>
        </div>
    </header>

    <main class="container">
        <img id="recipe-image" src="/placeholder.svg" alt="Recipe" class="recipe-image">
        
        <div id="recipe-description" class="recipe-description"></div>

        <div class="recipe-content">
            <aside class="ingredients-section">
                <h2 class="section-title">Ingredients</h2>
                <div id="ingredients-list"></div>
            </aside>

            <section class="instructions-section">
                <h2 class="section-title">Method</h2>
                <div id="instructions-list"></div>
            </section>
        </div>
    </main>
</div>
<script src="{{ 'recipe.js' | asset_url }}" async></script>